font-size = 1em
font-family = "Open Sans Condensed", sans-serif

body
    font-size font-size
    margin 0
    border 0
    padding 0
    font-family font-family
    color #fff

h1
    font-weight bold

p
    font-size 1.75em
    
#video-background
    position fixed
    right 0
    bottom 0
    min-width 100%
    min-height 100%
    z-index -1000

.knockout-bg
    position absolute
    right 0
    bottom 0
    min-width 100%
    min-height 100%
    z-index -999
    
#messages
    font-family "Roboto", sans-serif
    position absolute
    bottom 0
    left 0
    width 100%
    height 2em
    color black
    font-size 2em
    background white

#current-message
    position absolute
    top 0.4em
    margin-left 1em
    animation 2s fadein

#last-message
    left -100%
    position absolute
    top 0.4em
    margin-left 1em
    animation 1s slideout

.message-name
    font-weight bold
    font-size 0.75em

.message-content
    margin-left 0.2em

@keyframes fadein
    0%
        opacity 0
    50%
        opacity 0
    100%
        opacity 1

@keyframes slideout
    from
        left 0%
    to
        left -100%

.fighter
    font-family "Roboto", sans-serif
    background #f44336
    text-align center
    border-radius 50%
    padding 2em
    display inline-block
    position relative
    transition top 1s, padding 1s, background 1s

.fighter.winner
    top 1em
    padding 3em
    background #4CAF50

.fight
    display inline
    margin-right 1em
    position relative
    animation 2s fadein
